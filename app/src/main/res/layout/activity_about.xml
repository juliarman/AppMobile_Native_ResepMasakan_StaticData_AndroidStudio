<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_juliarman"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/juliarman"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"/>

    <TextView
        android:id="@+id/tv_juliarman"
        android:layout_below="@+id/img_juliarman"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Juliarman Umar"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_focus"
        android:layout_below="@+id/tv_juliarman"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:text="Web &amp; Mobile FullStack Developer"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_email"
        android:layout_below="@+id/tv_focus"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="juliarmanbone@gmail.com"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>